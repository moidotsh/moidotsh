{
  "compilerOptions": {
    "target": "ESNext", // Upgraded to modern ES standard
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext", // Ensuring compatibility with Next.js
    "moduleResolution": "Node", // Switched to Node-style module resolution
    "resolveJsonModule": true, // Required for JSON imports
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types", "./types"],
    "incremental": true,
    "allowSyntheticDefaultImports": true, // Allows default imports from CommonJS
    "paths": {
      "@/*": ["./src/*"] // Ensures that non-relative imports work as expected
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
